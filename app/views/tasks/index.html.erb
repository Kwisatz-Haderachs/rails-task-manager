<h1> Tasks </h1>

<% @tasks.each do |t| %>
<h3><%= t.name %></h3>
<p><%= t.check %></p>
<p><%= link_to "More Details", task_path(t) %></p>
<p><%= link_to "Edit Details", edit_task_path(t) %></p>
<p><%= link_to "Delete", task_path(t), method: :delete, data: {confirm: "You sure about this?"} %></p>
<% end %>

 <h4> <%= link_to "New Task", new_task_path %></h4>
